{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch",
      "WebSearch",
      "MCP",
      "Task",
      "NotebookEdit",
      "Skill",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Bash(npm run dev)",
      "Bash(pnpm dev)",
      "Bash(run-dev)",
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs npx prettier --write 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
