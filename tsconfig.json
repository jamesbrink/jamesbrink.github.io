{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@content/*": ["src/content/*"],
      "@lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": ["astro/client", "vitest/globals"]
  },
  "include": ["src/**/*", "tests/**/*"]
}
