---
import ContainerOuter from './ContainerOuter.astro';
import ContainerInner from './ContainerInner.astro';
import { navItems } from '../data/navigation';

interface SocialLink {
  href: string;
  label: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  { href: 'https://github.com/jamesbrink', label: 'GitHub', icon: 'github' },
  { href: 'https://linkedin.com/in/brinkjames', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://twitter.com/brinkoo7', label: 'X', icon: 'x' },
  { href: 'https://bsky.app/profile/jamesbrink.bsky.social', label: 'Bluesky', icon: 'bluesky' },
  { href: 'https://medium.com/@jamesbrink', label: 'Medium', icon: 'medium' },
  { href: 'https://instagram.com/brink.james/', label: 'Instagram', icon: 'instagram' },
];

const currentYear = new Date().getFullYear();
---

<footer class="mt-32 flex-none">
  <ContainerOuter>
    <div class="border-t border-zinc-100 pt-10 pb-16 dark:border-zinc-700/40">
      <ContainerInner>
        <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
          <div
            class="flex flex-wrap justify-center gap-x-6 gap-y-1 text-sm font-medium text-zinc-800 dark:text-zinc-200"
          >
            {
              navItems.map((item) => (
                <a href={item.href} class="transition hover:text-teal-500 dark:hover:text-teal-400">
                  {item.label}
                </a>
              ))
            }
          </div>
          <div class="flex gap-4">
            {
              socialLinks.map((link) => (
                <a
                  href={link.href}
                  class="group -m-1 p-1"
                  aria-label={link.label}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {link.icon === 'github' && (
                    <svg
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                      class="h-5 w-5 fill-zinc-400 transition group-hover:fill-zinc-500 dark:fill-zinc-500 dark:group-hover:fill-zinc-400"
                    >
