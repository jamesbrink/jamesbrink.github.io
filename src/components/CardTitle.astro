---
import CardLink from './CardLink.astro';

interface Props {
  as?: 'h2' | 'h3' | 'h4';
  href?: string;
}

const { as: Component = 'h2', href } = Astro.props;
---

<Component
  class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100"
>
  {href ? <CardLink href={href}><slot /></CardLink> : <slot />}
</Component>
