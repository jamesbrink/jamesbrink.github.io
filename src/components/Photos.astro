---
// Photo gallery with rotating images - ported from Spotlight template
import { featuredPhotos } from '../data/astrophotography';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const rotations = ['rotate-2', '-rotate-2', 'rotate-2', 'rotate-2', '-rotate-2'];
---

<div class:list={['mt-16 sm:mt-20', className]}>
  <div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
    {
      featuredPhotos.map((photo, index) => (
        <a
          href="/astrophotography"
          class:list={[
            'relative w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 transition hover:scale-105 sm:w-72 sm:rounded-2xl dark:bg-zinc-800',
            rotations[index % rotations.length],
          ]}
        >
          <div class="aspect-[9/10]">
            <img
              src={photo.grid}
              alt={`${photo.title} - ${photo.catalogId}`}
              loading="lazy"
              decoding="async"
              class="absolute inset-0 h-full w-full object-cover"
            />
          </div>
        </a>
      ))
    }
  </div>
</div>
