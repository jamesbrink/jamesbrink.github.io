---

<SimpleLayout
  title="Resume"
  intro="Site Reliability Engineer & Infrastructure Architect with decades of experience in cloud infrastructure, automation, and DevOps."
>
  <div class="space-y-20">
    <!-- Technical Expertise -->
    <section>
      <h2 class="text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100">
        Technical Expertise
      </h2>
      <div class="mt-6 flex flex-wrap gap-2">
        {
          skills.map((skill) => (
            <span class="inline-flex items-center rounded-full bg-zinc-100 px-3 py-1 text-sm font-medium text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
              {skill}
            </span>
          ))
        }
      </div>
    </section>

    <!-- Experience -->
    <section>
      <h2 class="text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100">Experience</h2>
      <div class="mt-6 space-y-8">
        {
          experience.map((job) => (
            <div class="group relative rounded-2xl border border-zinc-100 p-6 transition hover:border-zinc-200 dark:border-zinc-700/40 dark:hover:border-zinc-700">
              <div class="flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
                <div>
                  <h3 class="text-base font-semibold text-zinc-800 dark:text-zinc-100">
                    {job.company}
                  </h3>
                  <p class="text-sm text-teal-500 dark:text-teal-400">{job.role}</p>
                </div>
                <time class="text-sm text-zinc-400 dark:text-zinc-500">{job.date}</time>
              </div>
              <p class="mt-4 text-sm text-zinc-600 dark:text-zinc-400">{job.description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Open Source Projects -->
    <section>
      <h2 class="text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100">
        Open Source Projects
      </h2>
      <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          projects.map((project) => (
            <a
              href={project.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative rounded-2xl border border-zinc-100 p-6 transition hover:border-zinc-200 dark:border-zinc-700/40 dark:hover:border-zinc-700"
            >
              <h3 class="text-base font-semibold text-zinc-800 group-hover:text-teal-500 dark:text-zinc-100 dark:group-hover:text-teal-400">
                {project.name}
              </h3>
              <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">{project.description}</p>
            </a>
          ))
        }
      </div>
    </section>

    <!-- Education -->
    <section>
      <h2 class="text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100">
        Education & Certifications
      </h2>
      <div class="mt-6 space-y-4">
        {
          education.map((item) => (
            <div class="flex flex-col gap-1 border-l-2 border-teal-500 pl-4 sm:flex-row sm:items-center sm:gap-2">
              <span class="font-semibold text-zinc-800 dark:text-zinc-100">{item.title}</span>
              <span class="text-zinc-600 dark:text-zinc-400">â€” {item.org}</span>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Download Button -->
    <div class="flex justify-center">
      <Button href="/JamesBrink-Resume.pdf" variant="secondary">
        <svg viewBox="0 0 16 16" fill="none" aria-hidden="true" class="h-4 w-4 stroke-current">
          <path
            d="M4.75 8.75 8 12.25m0 0 3.25-3.5M8 12.25v-8.5"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
        Download Resume
      </Button>
    </div>
  </div>
</SimpleLayout>
